@model List<Film>

<div>
    <h1>Film</h1>
</div>

<div class="d-flex justify-content-center flex-wrap">
    @if (Model.Count > 0)
    {
        @foreach (Film film in Model)
        {
            <div class="card m-2" style="width: 18rem;">
                <img src="@film.Copertina" class="card-img-top" alt="copertina_film">
                <div class="card-body">
                    <h5 class="card-title">@film.Titolo</h5>
                    <p class="card-text">Durata: @film.Durata minuti</p>
                    <p class="card-text">Risoluzione: @film.Risoluzione</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Film" asp-action="Detail" asp-route-id="@film.Id">Dettagli</a>
                </div>
            </div>
        }
    }
    else
    {
        <h3>Non ci sono contenuti al momento</h3>
    }
</div>
