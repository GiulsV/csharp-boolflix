@model List<Serie>

<div>
    <h1>Serie</h1>
</div>

<div class="d-flex justify-content-center flex-wrap">
    @if (Model.Count > 0)
    {
        @foreach (Serie serie in Model)
        {
            <div class="card m-2" style="width: 18rem;">
                <img src="@serie.Copertina" class="card-img-top" alt="contenuto_serie">
                <div class="card-body">
                    <h5 class="card-title">@serie.Titolo</h5>
                    <p class="card-text">Prezzo: @serie.Risoluzione</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Serie" asp-action="Detail" asp-route-id="@serie.Id">Dettagli</a>
                </div>
            </div>
        }
    }
    else
    {
        <h3>Non ci sono contenuti al momento</h3>
    }
</div>
