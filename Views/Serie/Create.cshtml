@using csharp_boolflix.Data;
@model FormSerie


<div class="text-center">
    <h1>Create Serie</h1>
</div>
<div class="container">
    <form asp-controller="Serie" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <strong>Titolo:</strong>
            <input asp-for="Serie.Titolo" class="d-block w-100" />
            <span asp-validation-for="Serie.Titolo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Anno:</strong>
            <input asp-for="Serie.Anno" type="date" class="d-block w-100" />
            <span asp-validation-for="Serie.Anno" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Pegi:</strong>
            <input asp-for="Serie.Pegi" class="d-block w-100" />
            <span asp-validation-for="Serie.Pegi" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Trama:</strong>
            <input asp-for="Serie.Trama" class="d-block w-100" />
            <span asp-validation-for="Serie.Trama" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Copertina:</strong>
            <input asp-for="Serie.Copertina" class="d-block w-100" />
            <span asp-validation-for="Serie.Copertina" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Risoluzione:</strong>
            <input asp-for="Serie.Risoluzione" class="d-block w-100" />
            <span asp-validation-for="Serie.Risoluzione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Regia:</strong>
            <select asp-for="Serie.RegiaId" rows="10" class="d-block w-100">
                @foreach (Regia regista in Model.Registi)
                {
                    @if (Model.Serie.RegiaId == regista.Id)
                    {
                        <option value="@regista.Id" selected>@regista.Nome @regista.Cognome</option>
                    }
                    else
                    {
                        <option value="@regista.Id">@regista.Nome @regista.Cognome</option>
                    }
                }
            </select>
        </div>
        <div class="mb-3">
            <strong>Caratteristiche:</strong>
            <select asp-for="Serie.CaratteristicheId" rows="10" class="d-block w-100">
                @foreach (Caratteristica caratteristica in Model.Caratteristiche)
                {
                    @if (Model.Serie.CaratteristicheId == caratteristica.Id)
                    {
                        <option value="@caratteristica.Id" selected>@caratteristica.Nome</option>
                    }
                    else
                    {
                        <option value="@caratteristica.Id">@caratteristica.Nome</option>
                    }
                }
            </select>
        </div>
        <div class="mb-3">
            <strong>Generi:</strong>
            <select asp-for="Serie.GeneriId" rows="10" class="d-block w-100">
                @foreach (Genere genere in Model.Generi)
                {
                    @if (Model.Serie.GeneriId == genere.Id)
                    {
                        <option value="@genere.Id" selected>@genere.Nome</option>
                    }
                    else
                    {
                        <option value="@genere.Id">@genere.Nome</option>
                    }
                }
            </select>
        </div>
        <div class="mb-3">
            <strong>Attori:</strong>
            <br />
            <select asp-for="Serie.AttoriId" rows="10" class="d-block w-100">
                @foreach (Attore attore in Model.Attori)
                {
                    @if (Model.Serie.AttoriId == attore.Id)
                    {
                            <option value="@attore.Id" selected>
                                @attore.Nome @attore.Cognome
                            </option>
                    }
                    else
                    {
                        <option value="@attore.Id" selected>
                            @attore.Nome @attore.Cognome
                        </option>
                    }
                }
            </select>
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
</div>
